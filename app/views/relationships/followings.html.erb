<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2 class="text-center"><%= @user.name %>さんのフォロー一覧</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>名前</th>
          <th>紹介</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= link_to user.name, user_path(user.id) %></td>
            <td><%= user.introduction %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>