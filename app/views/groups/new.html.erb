<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">

      <% if @group.errors.any? %>
        <%= @group.errors.count %>件
        <% @group.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>

      <h2>グループ作成</h2>
      <%= form_with model: @group do |f| %>
        <%= f.file_field :group_image, accept: "image/*" %><br>

        <%= f.label :name, "名前" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>

        <%= f.label :introduction, "紹介" %>
        <%= f.text_area :introduction, rows: "5" ,class: "form-control" %>

        <%= f.submit "作成" ,class: "btn btn-primary" %>

      <% end %>
    </div>
  </div>
</div>