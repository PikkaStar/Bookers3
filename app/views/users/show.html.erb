<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user: @user %>
      <%= render "books/new", book: @book %>
    </div>
    <div class="col-md-8 offset-1">
      <table class="table">
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>内容</th>
        </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.get_image(100,100) %></td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>