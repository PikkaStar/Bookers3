<h3><%= user.name %>さん</h3>
<% if my_user?(user) %>
  <%= link_to "グループ作成",new_group_path, class: "btn btn-success" %>
<% end %>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tr>
    <th>名前</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>紹介</th>
    <td><%= user.introduction %></td>
  </tr>
  <tr>
    <th>フォロー数</th>
    <td id="follow_count"><%= render "relationships/follow_count",user: user %></td>
  </tr>
  <tr>
    <th>フォロワー数</th>
    <td id="follower_count"><%= render "relationships/follower_count", user: user %></td>
  </tr>
</table>

<% if my_user?(user) %>
  <%= link_to "編集",edit_user_path(user),class: "mb-5 btn btn-success form-control" %>
<% else %>
  <div id="follow">
    <%= render "relationships/follow",user: user %>
  </div>
<% end %>
